<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Platform Card Template -->
        <!-- Repeat for Discord, Roblox, Messenger -->

        <!-- Discord Card -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/discord"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/discordConsentButton"
                android:text="@string/view_discord_consent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/discordGrantButton"
                android:text="@string/grant_discord_consent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="4dp" />

            <Switch
                android:id="@+id/discordToggle"
                android:text="@string/allow_discord_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="8dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <!-- Roblox Card -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/roblox"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/robloxConsentButton"
                android:text="@string/view_roblox_consent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/robloxGrantButton"
                android:text="@string/grant_roblox_consent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="4dp" />

            <Switch
                android:id="@+id/robloxToggle"
                android:text="@string/allow_roblox_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="8dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <!-- Facebook/Messenger Card -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/facebook_messenger"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/facebookConsentButton"
                android:text="@string/view_facebook_consent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/facebookGrantButton"
                android:text="@string/grant_facebook_consent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="4dp" />

            <Switch
                android:id="@+id/facebookToggle"
                android:text="@string/allow_facebook_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="8dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>