<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onlineSafetyRoot"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <TextView
        android:id="@+id/tipHeader"
        android:text="@string/online_safety_tip"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tipTimestamp"
        android:text="Updated every 4 hours"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tipText"
            android:background="@drawable/tip_card_background"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading safety tip..." />
    </ScrollView>

    <Button
        android:id="@+id/refreshTipsButton"
        android:text="@string/show_another_tip"
        android:contentDescription="Show another safety tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <Switch
        android:id="@+id/safeScopeToggle"
        android:text="@string/enable_safescope_block_explicit_sites"
        android:contentDescription="Enable SafeScope to block explicit sites"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_gravity="center_horizontal"
        tools:ignore="UseSwitchCompatOrMaterialXml" />
</LinearLayout>